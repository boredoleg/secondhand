<div class="box">
  <%= link_to (image_tag pin.image(:medium)), pin %>

    <h1>
      <%= pin.productname %>
    </h1>

    <p>
      <%= pin.description %>
    </p>

    <% if user_signed_in? %>
    <p class="phone"> 
      Contact: <%= pin.phone %>
    </p>

    <% else %>

    <p class="price">
      <strong>
        HKD <%= pin.price %>
      </strong>
    </p>
    <p class="phone"> 
      Contact: <strong>Log in</strong>
    </p>
<% end %>
<% if current_user == pin.user %>
    <p>
      <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-mini" %>
      <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini" %>
    </p>
  <% end %>
  
</div>
