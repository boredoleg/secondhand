<div class="box">
  <%= link_to (image_tag pin.image(:medium)), pin %>

    <p class="title">
        <%= pin.title %>
    </p>
    <p class="description">
        <%= pin.description %>
    </p>
    <p class="price">
      <strong>
        HKD <%= pin.price %>
      </strong>
    </p>

<% if current_user == pin.user %>
    <p>
      <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-mini" %>
      <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini" %>
    </p>
  <% end %>
</div>
