<%= simple_form_for(@pin, html: { class:"form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

	<%= f.input :image, label: "Upload an image" %>
	<%= f.input :image_remote_url, label: "or enter a URL" %>
  <%= f.input :title, as: :text, placeholder: "Make it teasing", input_html: { rows: "1"} %>
  <%= f.input :description, as: :text, placeholder: "Keep it short and funny", input_html: { rows: "3"} %>
  <%= f.input :price, as: :text, placeholder: "Enter the price in HKD", label: "Price", input_html: { rows: "1"} %>
  <%= f.input :contact, as: :text, placeholder: "Phone Nr. or EMail", label: "Contact", input_html: { rows: "1"} %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
