<%= simple_form_for(@pin) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

	<%= f.input :image, label: "Upload an image" %>
	<%= f.input :image_remote_url, label: "or enter a URL" %>
  <%= f.input :productname, as: :text, placeholder: "Make it teasing", input_html: { rows: "1"} %>
  <%= f.input :description, as: :text, placeholder: "Keep it short and funny. You got 300 characters", input_html: { rows: "3", :maxlength => 300} %>
  <%= f.input :price, as: :decimal, placeholder: "Enter the price in HKD", label: "Price", input_html: { rows: "1"} %>
  <%= f.input :phone, input_html: { as: :phone}, placeholder: "", label: "Phone", input_html: { rows: "1"} %>
  <%= f.input :email, input_html: { as: :email}, placeholder: "", label: "Email", input_html: { rows: "1"} %>


  <div class="row-fluid">
    <div class= "form-actions" >
      <div class="span4">
    <%= f.button :submit, class: "btn btn-primary" %>
      <div class="span4 offset4">
    </div>
  </div>
<% end %>
